a=int(input('enter value of a'))
b=int(input('enter value of b'))
c=a+b
d=a-b
e=a*b
f=a/b
g=a%d
print('addition of the numbers is:',c)
print('substraction of the numbers is:',d)
print('multiplication of the numbers is:',e)
print('division of the numbers is:',f)
print('remainder of the numbers is:',g)            
            

