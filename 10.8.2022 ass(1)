#include<stdio.h>
main()
{
	int n,r,sum=0,t;
	printf("enter any number");
	scanf("%d",&n);
	t=n;
	while(n>0)
	{
		r=n%10;
		sum=sum+r;
		n=n/10;
	}
	if(t%sum==0)
	printf("Harshad Number");
	else
	printf("Not Harshad Number");
}

output 1:-

enter any number 156
Harshad Number
--------------------------------
Process exited after 7.216 seconds with return value 0
Press any key to continue . . .

output 2:-

enter any number 22
Not Harshad Number
--------------------------------
Process exited after 2.507 seconds with return value 0
Press any key to continue . . .
